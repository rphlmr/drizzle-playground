{
	"name": "drizzle-playground",
	"version": "1.0.0",
	"description": "A playground to run Drizzle scripts on docker databases",
	"main": "src/index.ts",
	"scripts": {
		"start": "tsx src/index.ts",
		"pg:migration:generate": "drizzle-kit generate:pg --config drizzle.config.pg.ts",
		"pg:migration:up": "drizzle-kit up:pg --config drizzle.config.pg.ts",
		"pg:migration:check": "drizzle-kit up:pg --config drizzle.config.pg.ts",
		"pg:migration:generate:custom": "drizzle-kit generate:pg --custom --config drizzle.config.pg.ts",
		"pg:migration:drop": "drizzle-kit drop --config drizzle.config.pg.ts",
		"pg:migration:deploy": "tsx src/deploy.ts",
		"pg:push": "drizzle-kit push:pg --config drizzle.config.pg.ts",
		"pg:introspect": "drizzle-kit introspect:pg --config drizzle.config.pg.ts",
		"pg:studio": "drizzle-kit studio --config drizzle.config.pg.ts --host 127.0.0.1",
		"pglite:migration:generate": "drizzle-kit generate:pg --config drizzle.config.pglite.ts",
		"pglite:migration:deploy": "tsx src/deploy.pglite.ts",
		"pglite:push": "drizzle-kit push:pg --config drizzle.config.pglite.ts",
		"pglite:server": "tsx src/pg/pglite/local-server.ts",
		"pglite:studio": "drizzle-kit studio --config drizzle.config.pglite.ts --host 127.0.0.1",
		"pglite:start:studio": "tsx src/pg/pglite/start-studio.ts",
		"mysql:push": "drizzle-kit push:mysql --config drizzle.config.mysql.ts",
		"mysql:studio": "drizzle-kit studio --config drizzle.config.mysql.ts --host 127.0.0.1",
		"sqlite:push": "drizzle-kit push:sqlite --config drizzle.config.sqlite.ts",
		"sqlite:generate": "drizzle-kit generate:sqlite --config drizzle.config.sqlite.ts",
		"sqlite:generate:custom": "drizzle-kit generate:sqlite --custom --config drizzle.config.sqlite.ts",
		"sqlite:migration:deploy": "tsx src/deploy.sqlite.ts",
		"sqlite:studio": "drizzle-kit studio --config drizzle.config.sqlite.ts --host 127.0.0.1"
	},
	"author": "@rphlmr",
	"license": "ISC",
	"dependencies": {
		"@electric-sql/pglite": "^0.1.2",
		"@libsql/client": "^0.6.0",
		"@neondatabase/serverless": "^0.9.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@planetscale/database": "^1.16.0",
		"better-sqlite3": "^9.4.5",
		"chokidar": "^3.6.0",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.30.7",
		"drizzle-zod": "^0.5.1",
		"mysql2": "^3.9.4",
		"pg": "^8.11.5",
		"postgres": "^3.4.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@types/better-sqlite3": "^7.6.9",
		"drizzle-kit": "^0.20.14",
		"npm-run-all": "^4.1.5",
		"pglite-server": "^0.1.1",
		"prettier": "^3.2.5",
		"tsx": "^4.7.2",
		"typescript": "^5.4.4"
	}
}
